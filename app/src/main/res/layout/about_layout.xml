<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:background="#444">

<TextView android:text="Katana" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/appTitle"
    android:textSize="50sp"
    android:gravity="center_horizontal"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:textColor="#EEE"
    android:letterSpacing="0.2"
    android:phoneNumber="false"
    android:paddingTop="40dp"
    android:textStyle="bold" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/appTitle"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Created by Dennis Pacewicz"
            android:id="@+id/textView"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#CCC"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textColor="#111"
            android:textSize="20sp"
            android:text="Thanks for trying out Katana!\nIf you find an error in the app, or would like to send in a suggestion, please post it on GitHub, or send me a tweet!"
            android:layout_marginTop="20dp"
            android:singleLine="false"
            android:phoneNumber="false"
            android:padding="10dp"
            android:background="#eee"
            android:layout_margin="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="GitHub page"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:textColor="#9F9"
            android:onClick="goToGit"
            android:layout_marginTop="0dp"
            android:textStyle="bold"
            android:elegantTextHeight="false"
            android:clickable="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Twitter"
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal"
            android:textColor="#4099FF"
            android:onClick="goToTwitter"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:elegantTextHeight="false"
            android:clickable="true" />

    </LinearLayout>

</RelativeLayout>

